{
  "exclude": ["node_modules", "lib", "__tests__"],
  "include": ["package.json"],
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "rootDir": ".",
    "outDir": "lib",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true
  }
}
