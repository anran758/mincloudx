{
  "extends": "../../tsconfig.json",
  "include": ["src", "test", "types", "tool/baas-init.ts"],
  "exclude": ["**/*.test.ts"],
  "compilerOptions": {
    "typeRoots": [
      "../../node_modules/@types",
